{
  "name": "@yc-w-cn/react-use-flexsearch",
  "version": "0.3.0",
  "description": "React hook to search a FlexSearch index",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "type": "module",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "build:watch": "pnpm run build -- --watch",
    "format": "prettier --write 'src/**/*.ts' 'rollup.config.js' 'README.md'",
    "prebuild": "rimraf dist",
    "prepublish": "pnpm run build",
    "release": "standard-version",
    "test": "jest",
    "test:watch": "pnpm run test -- --watch",
    "lint": "eslint src"
  },
  "homepage": "https://github.com/yc-w-cn/react-use-flexsearch",
  "repository": {
    "type": "git",
    "url": "https://github.com/yc-w-cn/react-use-flexsearch.git"
  },
  "keywords": [
    "react",
    "component",
    "search",
    "flexsearch",
    "typescript"
  ],
  "author": "Yuchen Wang <contact@wangyuchen.cn>",
  "license": "MIT",
  "dependencies": {
    "flexsearch": "^0.7.43"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@commitlint/cli": "^19.0.3",
    "@commitlint/config-conventional": "^19.0.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.62",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.57.0",
    "eslint-config-standard-with-typescript": "^43.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.34.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-testing-library": "^5.8.0",
    "rimraf": "^5.0.5",
    "rollup": "^4.12.0",
    "standard-version": "^9.5.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": ">=16.8"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
